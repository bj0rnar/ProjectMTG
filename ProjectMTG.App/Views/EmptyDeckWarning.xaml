<ContentDialog
    x:Class="ProjectMTG.App.Views.EmptyDeckWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectMTG.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="deletedialog"
    Title="Warning, empty deck"
    PrimaryButtonText="Don't delete!"
    SecondaryButtonText="Delete"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    DefaultButton="Primary">

    <StackPanel>
        <TextBlock Text="Deck is empty, would you rather like to delete?"></TextBlock>
    </StackPanel>
</ContentDialog>
