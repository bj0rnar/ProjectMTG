<Page
    x:Class="ProjectMTG.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ProjectMTG.Model"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">

            <ListView Name="CardListView" HorizontalAlignment="Left" Height="756" Margin="306,99,0,0" IsItemClickEnabled="True"
                      BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" Width="289" SelectionMode="Single"
                      ItemClick="CardListView_OnItemClick"  ItemsSource="{x:Bind ViewModel.DisplayCards}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Card">
                        <TextBlock Text="{x:Bind name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView Name ="DeckListView" HorizontalAlignment="Left" Height="783" Margin="1132,80,0,0" IsItemClickEnabled="True"
                      BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" Width="289" SelectionMode="Single"
                      ItemClick="DeckListView_OnItemClick" ItemsSource="{x:Bind ViewModel.GetObservableDeck}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:Card">
                        <TextBlock Text="{x:Bind name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock HorizontalAlignment="Left" Margin="306,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="55"><Run Text="All Cards"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="1261,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="32" ><Run Text="Deck"/><LineBreak/><Run/></TextBlock>

            <Button Content="Add card to deck" HorizontalAlignment="Left" Margin="674,668,0,0" VerticalAlignment="Top" Height="59" Width="153" Command="{x:Bind ViewModel.AddCardToDeck}" CommandParameter="{Binding ElementName=CardListView, Path=SelectedItem}"/>
            <Button Content="Remove from deck" HorizontalAlignment="Left" Margin="674,766,0,0" VerticalAlignment="Top" Width="153" Height="59" RenderTransformOrigin="0.748,0.153" Command="{x:Bind ViewModel.RemoveCardFromDeck}" CommandParameter="{Binding ElementName=DeckListView, Path=SelectedItem}"/>

            <Image Name="ImageBox" HorizontalAlignment="Left" Height="340" Margin="638,271,0,0" VerticalAlignment="Top" Width="240"/>
            <TextBlock HorizontalAlignment="Left" Margin="715,234,0,0" Text="Card Image" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.095,-0.053"/>
            <Button x:Name="SaveDecklistButton" Content="Save decklist" HorizontalAlignment="Left" Margin="951,766,0,0" VerticalAlignment="Top" Height="59" Width="153" Command="{x:Bind ViewModel.SaveDeckList}" CommandParameter="{Binding ElementName=DeckListName, Path=Text}" RenderTransformOrigin="0.389,0.873"/>
            <TextBox HorizontalAlignment="Left" Margin="927,698,0,0" VerticalAlignment="Top" Width="200" Header="Deck name" PlaceholderText="Type your deck name here" x:Name="DeckListName"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,99,0,0" Text="Color:" VerticalAlignment="Top"/>
            <CheckBox Content="Blue" x:Name="BlueCheckbox" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Click="CheckBox_OnClick"/>
            <CheckBox Content="Red" x:Name="RedCheckBox" HorizontalAlignment="Left" Margin="83,136,0,0" VerticalAlignment="Top" Click="CheckBox_OnClick"/>
            <CheckBox Content="White" x:Name="WhiteCheckBox" HorizontalAlignment="Left" Margin="160,136,0,0" VerticalAlignment="Top" Click="CheckBox_OnClick"/>
            <CheckBox Content="Black" x:Name="BlackCheckBox" HorizontalAlignment="Left" Margin="10,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.396,0.234" Click="CheckBox_OnClick"/>
            <CheckBox Content="Green" x:Name="GreenCheckBox" HorizontalAlignment="Left" Margin="83,173,0,0" VerticalAlignment="Top" Click="CheckBox_OnClick"/>
            <CheckBox Content="Colorless" x:Name="ColorlessCheckBox" HorizontalAlignment="Left" Margin="160,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,0.141" Click="CheckBox_OnClick"/>

            <AutoSuggestBox x:Name="CardSearchBox" Header="Search for a card" HorizontalAlignment="Left" Margin="363,860,0,0" VerticalAlignment="Top" Width="176">
                <interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="TextChanged">
                        <core:InvokeCommandAction Command="{x:Bind ViewModel.SearchText}" CommandParameter="{Binding ElementName=CardSearchBox, Path=Text}"></core:InvokeCommandAction>
                    </core:EventTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </AutoSuggestBox>

            <GridView Margin="1166,863,64,24">
                <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="Total Card Count:"/>
                    <TextBlock Text="Creatures:"/>
                    <TextBlock Text="Instant/Sorcery:"/>
                    <TextBlock Text="Land:"/>
                    <TextBlock Text="Planeswalker:"/>
                    <TextBlock Text="Artifact:"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                    <TextBlock Text="{x:Bind ViewModel.TotalCardCount, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.Creatures, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.InstantSorcery, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.Land, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.Planeswalker, Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind ViewModel.Artifact, Mode=OneWay}"/>
                </StackPanel>
            </GridView>
            <Button x:Name="SaveChangesButton" Content="Save changes" HorizontalAlignment="Left" Margin="951,766,0,0" VerticalAlignment="Top" Height="59" Width="153" Command="{x:Bind ViewModel.SaveChanges}" CommandParameter="{Binding ElementName=DeckListName, Path=Text}"/>

            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
        </Grid>
    </Grid>
</Page>
