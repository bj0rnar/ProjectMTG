<Page
    x:Class="ProjectMTG.App.Views.DeckViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ProjectMTG.Model"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
	<Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
		<Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
			<ListView Name ="DeckListView" HorizontalAlignment="Left" Height="291" Margin="87,318,0,0" IsItemClickEnabled="True"
                      BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" Width="201" SelectionMode="Single"
                      ItemClick="DeckLW_OnItemClick" ItemsSource="{x:Bind ViewModel.GetObservableDeckList}">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="model:Deck">
						<TextBlock Text="{x:Bind DeckName}"/>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			<TextBlock HorizontalAlignment="Left" Margin="169,294,0,0" Text="Decks" TextWrapping="Wrap" VerticalAlignment="Top"/>

			<GridView x:Name ="ImageList" HorizontalAlignment="Stretch" Height="939" Margin="399,32,0,0" IsItemClickEnabled="False"
                      BorderBrush="Black" BorderThickness="1" VerticalAlignment="Stretch" Width="1043" SelectionMode="None"
                      ItemsSource="{x:Bind ViewModel.GetObservableImage}">
				<GridView.ItemTemplate>
					<DataTemplate>
						<Image Source="{Binding}" Height="280" Width="200" Stretch="UniformToFill"/>
					</DataTemplate>
				</GridView.ItemTemplate>
			</GridView>
			<Button Content="Delete deck" HorizontalAlignment="Left" Margin="141,738,0,0" VerticalAlignment="Top" Command="{x:Bind ViewModel.DeleteDeckCommand}" CommandParameter="{Binding ElementName=DeckListView, Path=SelectedItem}"/>
			<Button Content="Change deckname" HorizontalAlignment="Left" Margin="120,670,0,0" VerticalAlignment="Top" Command="{x:Bind ViewModel.EditDeckNameCommand}" CommandParameter="{Binding ElementName=DeckListView, Path=SelectedItem}"/>
			<TextBox HorizontalAlignment="Left" Margin="120,638,0,0" Text="{x:Bind ViewModel.DeckName, Mode=TwoWay}" VerticalAlignment="Top" RenderTransformOrigin="0.209,-0.188" Width="135"/>


			<!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
		</Grid>
	</Grid>
</Page>
