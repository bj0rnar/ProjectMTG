<ContentDialog
    x:Class="ProjectMTG.App.Views.ContentDialog1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectMTG.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ProjectMTG.Model"
    x:Name="dialog"
    mc:Ignorable="d"
    Title="Select deck "
    PrimaryButtonText="Create new" PrimaryButtonClick="ContentDialog1_OnPrimaryButtonClick"
    SecondaryButtonText="Edit deck" SecondaryButtonClick="ContentDialog1_OnSecondaryButtonClick">


    <Grid Margin="0,0,4,0">
		<ListView Name ="ContentDialogDecklist" HorizontalAlignment="Center" Height="254" Margin="0,10,0,0" IsItemClickEnabled="True"
        BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" Width="288" SelectionMode="Single" ItemClick="ContentDialogDecklist_OnItemClick"
        ItemsSource="{x:Bind _deckList}">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="model:Deck">
					<TextBlock Text="{x:Bind DeckName}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</ContentDialog>
